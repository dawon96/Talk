        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".chat.MessageActivity" />
        <activity android:name=".fragment.HomeFragment" />
        <activity android:name=".fragment.CategoryFragment" />
        <activity android:name=".fragment.MypageFragment" />
        <activity android:name=".fragment.WriteFragment" />
        <activity android:name=".fragment.ReadingFragment" />
        <activity android:name=".fragment.Reading_search" />
        <activity android:name=".fragment.Reading_category"></activity>
    </application>

</manifest>