<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="5dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbcedf"
        android:paddingBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <ImageView
            android:src="@drawable/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도서"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct1"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#bbcedf"
            android:paddingBottom="15dp"
            />

        <ImageView
            android:src="@drawable/comb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="뷰티/미용"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct2"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbcedf"
        android:paddingBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <ImageView
            android:src="@drawable/bicycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스포츠/레저"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct3"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#bbcedf"
            android:paddingBottom="15dp"
            />
        <ImageView
            android:src="@drawable/laptop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="디지털/가전"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct4"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbcedf"
        android:paddingBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <ImageView
            android:src="@drawable/clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="의류/상하의"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct5"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#bbcedf"
            android:paddingBottom="15dp"
            />

        <ImageView
            android:src="@drawable/bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가방/액세서리"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct6"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbcedf"
        android:paddingBottom="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <ImageView
            android:src="@drawable/shoppingcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생활/식품"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct7"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#bbcedf"
            android:paddingBottom="15dp"
            />

        <ImageView
            android:src="@drawable/etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ct8"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbcedf"
        android:paddingBottom="15dp"
        />
</LinearLayout>